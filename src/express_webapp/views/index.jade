doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/font-awesome-4.7.0/css/font-awesome.min.css')

body
  block content
    div.challenges-container
      h1 Liste des Challenges

      if challenges.length > 0
        table.table-challenges
          thead
            tr
              th Titre
              th Catégorie
              th Difficulté
              th Description

          tbody
            each challenge in challenges
              tr
                td
                  a(href='/challenge/#{challenge.idChallenge}')= challenge.titleChallenge
                td= challenge.itsCategory
                td= challenge.itsDifficulty
                td= challenge.descriptionChallenge
      else
        p Aucun challenge n'est disponible pour le moment.