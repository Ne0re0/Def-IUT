doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/font-awesome-4.7.0/css/font-awesome.min.css')
  body
    nav.navbar
        // Left
        a.logo(href='/') Site's logo

        // Right
        ul.nav-links
          li
            a(href='/connect') Connection
          li
            a(href='/challenges') Challenges
          li
            a(href='/scoreboard') ScoreBoard
          li
            a(href='/myprofile') My Profile
          li
            a(href='/disconnect') Disconnection

    block content
      #background-element
        .container
          .login-form
            .headings
              h3 Bienvenue
            .text-center.mb-5
              p Nous vous avons préparé du café

            form(id="loginForm", action="/connect", method="post")
              .inputs-container
                .inputs
                  input(autocomplete='chrome-off', class='input-group', type='text', placeholder='Nom d\'utilisateur', name='username')
                
                .inputs.password-input
                  input(autocomplete='chrome-off', class='input-group', id='password_input', type='password', placeholder='Mot de passe', name='password')
                  i.fa.fa-eye-slash(id='password_eye')
                
                button.login-button(type='submit') Se connecter
                
                span.text-center.mt-5
                  | Vous n'avez pas de compte ? 
                  a.a-tag(href='/register') Créer un compte
                if failed
                  .text-center.mb-5
                    p= failed
                 
  script(src="/javascripts/vantaThree.js")
  script(src="/javascripts/vantaNet.js")
  script(src="/javascripts/background-element.js")
