doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/font-awesome-4.7.0/css/font-awesome.min.css')


  body
    nav.navbar
      // Left
      a.logo(href='/')
        img(src='/logos/Full_Logo_Horizontal.png',alt="Website logo",width='310', height='75')
      ul.nav-links
        li
          a(href='/') Challenges
        li
          a(href='/scoreboard') Scoreboard
        li
          a(href='/myprofile') Mon compte
        li
          a(href='/disconnect') Déconnexion

        
            
    block content
      #background-element
        .container
          .login-form
            .headings
              h3 Nouveau mot de passe
            .text-center.mb-5
              p Nous sommes heureux de vous accueillir

            form(id="registerForm", action='/recover/' + token, method="post")
              .inputs-container

                .inputs.password-input
                  input(autocomplete='chrome-off', class='input-group', id='password_input', type='password', placeholder='Mot de passe', name='password', required)
                  i.fa.fa-eye-slash(id='password_eye')

                ul.strength-list
                  li
                    span.loweruppercase.list-group
                      i.fa.fa-circle
                      span Majuscules minuscules
                  li
                    span.list-group.numbercase
                      i.fa.fa-circle
                      span Chiffres (0-9)
                  li
                    span.list-group.specialcase
                      i.fa.fa-circle
                      span Caractères spéciaux (!#@$%*)
                  li
                    span.list-group.numcharacter
                      i.fa.fa-circle
                      span 8 Caractères

                .inputs.password-input
                  input(autocomplete='chrome-off', class='input-group', id='password_input_confirmation', type='password', placeholder='Confirmation du mot de passe', name='password-confirmation', required)
                ul.strength-list
                  li
                    span.passwordconfirmationvalid.list-group
                      i.fa.fa-circle
                      span Confirmation valide


                button.login-button(type='submit') Valider
                
                span.text-center.mt-5
                  | Vous avez déjà un compte ? 
                  a.a-tag(href='/connect') Se connecter
                if error
                  div.div-recover-error
                    .text-center.mb-5
                      p= error
                if success
                  div.div-recover-success
                    .text-center.mb-5
                      p= success



  script(src='/javascripts/register.js')
  script(src="/javascripts/vantaThree.js")
  script(src="/javascripts/vantaNet.js")
  script(src="/javascripts/background-element.js")
