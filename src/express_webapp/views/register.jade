doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/font-awesome-4.7.0/css/font-awesome.min.css')


  body
    block content

      .container
        .register-form
          .headings
            h3 Bienvenue
          .text-center.mb-5
            p Nous sommes heureux de vous accueillir

          form(id="registerForm", action="/register", method="post")
            .inputs-container
              .inputs
                input(autocomplete='chrome-off', class='input-group', type='text', placeholder='Nom d\'utilisateur', name='username')

              .inputs
                input(autocomplete='chrome-off', class='input-group', id='email_input', type='mail', placeholder='Adresse e-mail', name='email')
              ul.strength-list
                li
                  span.emailvalid.list-group
                    i.fa.fa-circle
                    span Adresse e-mail valide (*univ-ubs.fr)
              
              .inputs.password-input
                input(autocomplete='chrome-off', class='input-group', id='password_input', type='password', placeholder='Mot de passe', name='password')
                i.fa.fa-eye-slash(id='password_eye')

              ul.strength-list
                li
                  span.loweruppercase.list-group
                    i.fa.fa-circle
                    span Majuscules minuscules
                li
                  span.list-group.numbercase
                    i.fa.fa-circle
                    span Chiffres (0-9)
                li
                  span.list-group.specialcase
                    i.fa.fa-circle
                    span Caractères spéciaux (!#@$%*)
                li
                  span.list-group.numcharacter
                    i.fa.fa-circle
                    span 8 Caractères

              .inputs.password-input
                input(autocomplete='chrome-off', class='input-group', id='password_input_confirmation', type='password', placeholder='Confirmation du mot de passe', name='password-confirmation')
              ul.strength-list
                li
                  span.passwordconfirmationvalid.list-group
                    i.fa.fa-circle
                    span Confirmation valide


              button.login-button(type='submit') Valider
              
              span.text-center.mt-5
                | Vous avez déjà un compte ? 
                a.a-tag(href='/connect') Se connecter
              if error
                .text-center.mb-5
                  p= error
              if success
                .text-center.mb-5
                  p= success

      script(src='/javascripts/register.js')
