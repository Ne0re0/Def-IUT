doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/font-awesome-4.7.0/css/font-awesome.min.css')
  body
    nav.navbar
        // Left
        a.logo(href='/')
          img(src='/logos/Full_Logo_Horizontal.png',width='310', height='75')
  
        ul.nav-links
          li
            a(href='/') Challenges
          li
            a(href='/scoreboard') Scoreboard
          li
            a(href='/myprofile') Mon compte
          li
            a(href='/disconnect') Déconnexion

    block content
      #background-element
        .container
          .login-form
            
            .headings
              h3 Vérifiez votre compte
            .text-center.mb-5
              p Vous êtes à deux doigts de vous connecter

            form(id="loginForm", action='/verify/'+ token, method="post")
              .inputs-container
                .inputs
                  input(autocomplete='chrome-off', class='input-group', type='text', placeholder='Nom d\'utilisateur', name='username')
                
                .inputs.password-input
                  input(autocomplete='chrome-off', class='input-group', id='password_input', type='password', placeholder='Mot de passe', name='password')
                
                button.login-button(type='submit') Vérifier son compte
          
            if error
              div.div-verify-error
                .text-center.mb-5
                  p= error
            if success
              div.div-verify-success
                .text-center.mb-5
                  p= success


                 
  script(src="/javascripts/vantaThree.js")
  script(src="/javascripts/vantaNet.js")
  script(src="/javascripts/background-element.js")
